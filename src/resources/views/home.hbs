<div class="mt-4">
    <div class="row" >
         {{#each courses}}
        <div class="col-sm-6 col-lg-4 col-item">
            <div class="card card-course-item" >
                    <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" width="400px" height="400px" class="card-img-top" alt="{{this.name}}">
                    </a>
                <div class="card-body" >
                    <a href="/courses/{{this.slug}}"></a>
                    <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                </div>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>